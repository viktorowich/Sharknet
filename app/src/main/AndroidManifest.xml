<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="berlin.htw.schneider.viktor.sharknet">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Contacts"
                android:label="@string/title_activity_contacts"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".Chat"
                android:label="@string/title_activity_chat"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".Timeline"
                android:label="@string/title_activity_timeline"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".Profile"
                android:label="@string/title_activity_profile"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".Inbox"
                android:label="@string/title_activity_inbox"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity
                android:name=".ChatDetailActivity"
                android:label="@string/title_activity_chat_detail"
                android:parentActivityName=".Chat"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Chat"/>
        </activity>
        <activity
                android:name=".ChatNew"
                android:label="@string/title_activity_chat_new"
                android:parentActivityName=".Chat"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Chat"/>
        </activity>
        <activity
                android:name=".ConDetailView"
                android:label="@string/title_activity_con_detail_view"
                android:parentActivityName=".Contacts"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Contacts"/>
        </activity>
        <activity
                android:name=".ProfileDetail"
                android:label="@string/title_activity_profile_detail"
                android:parentActivityName=".Profile"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Profile"/>
        </activity>
        <activity
                android:name=".ConNew"
                android:label="@string/title_activity_con_new"
                android:parentActivityName=".Contacts"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Contacts"/>
        </activity>
        <activity
                android:name=".ProfileDetailInterests"
                android:label="@string/title_activity_profile_detail_interests"
                android:parentActivityName=".ProfileDetail"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.ProfileDetail"/>
        </activity>
        <activity
                android:name=".TimelineNewFeed"
                android:label="@string/title_activity_timeline_detail_view"
                android:parentActivityName=".Timeline"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="berlin.htw.schneider.viktor.sharknet.Timeline"/>
        </activity>
    </application>

</manifest>