<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp"
>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="40dp"
                  android:gravity="left">

        <android.support.v7.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
            <ImageView
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/ic_person_pink_700_48dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
            </ImageView>
        </android.support.v7.widget.CardView>


        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/msg"
                        android:padding="15dp"
                        android:layout_marginStart="7dp"
                        android:background="@drawable/corners_round_msg"
                        />
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/timestamp"
                          android:paddingRight="5dp"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/circle_green"
                           android:layout_gravity="center"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/circle_orange" android:layout_gravity="center"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/circle_red" android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
    >
            <ImageView
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:id="@+id/msg_key"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@drawable/ic_vpn_key_pink_700_18dp"
            >
                    </ImageView>
      <!--  //TODO: icon src anpassen !-->
        <ImageView
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:id="@+id/msg_key_grey"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/ic_vpn_key_pink_700_18dp"
        >

            </ImageView>

    </RelativeLayout>
</android.support.v7.widget.CardView>